{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build (c)",
      "type": "shell",
      "command": "cc",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "build (c++)",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++20",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}
